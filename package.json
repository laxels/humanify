{
  "name": "humanify",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/index.ts",
    "build": "bun build --compile --minify --sourcemap --bytecode src/index.ts --outfile=dist/humanify",
    "validate": "concurrently --group --names typecheck,lint,test --prefix name --prefix-colors auto \"bun run typecheck\" \"bun run lint\" \"bun run test:unit\"",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write --diagnostic-level=error",
    "test:unit": "bun test ./src/**/*.test.ts",
    "test:e2e": "bun run build && bun test ./src/**/*.test.e2e.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@babel/core": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@babel/types": "^7.28.5",
    "@dotenvx/dotenvx": "^1.51.1",
    "babel-plugin-transform-beautifier": "^0.1.1",
    "commander": "^14.0.2",
    "lodash": "^4.17.21",
    "webcrack": "^2.15.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/babel__core": "^7.20.5",
    "@types/bun": "latest",
    "@types/lodash": "^4.17.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "typescript": "^5.9.3"
  }
}
